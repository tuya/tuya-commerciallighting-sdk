<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="?attr/list_bg_color"
    android:minHeight="80dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_device_list_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/thing_devicelist_dot_gray" />

    <ImageView
        android:id="@+id/iv_device_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_device_list_dot"
        android:scaleType="fitXY"
        android:src="@drawable/thing_device_cz02" />

    <TextView
        android:id="@+id/tv_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/thing_mg_10"
        android:layout_toRightOf="@+id/iv_device_icon"
        android:ellipsize="end"
        android:gravity="start"
        android:singleLine="true"
        android:text="?attr/app_name"
        android:textColor="?attr/list_primary_color" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/arrow_more" />

    <TextView
        android:id="@+id/tv_join_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_device"
        android:background="@color/red"
        android:padding="3dp"
        android:text="@string/cl_retry"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        style="@style/line_long"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"></View>
</RelativeLayout>