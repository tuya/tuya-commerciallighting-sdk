<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/thing_dp_8">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/thing_dp_15"
        android:layout_marginRight="@dimen/thing_dp_15"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/thing_dp_8"
        app:cardElevation="@dimen/thing_dp_0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/thing_dp_8"
            android:paddingTop="@dimen/thing_dp_10"
            android:paddingRight="@dimen/thing_dp_8"
            android:paddingBottom="@dimen/thing_dp_10">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/thing_dp_48"
                android:layout_height="@dimen/thing_dp_48"
                android:src="@drawable/ic_launcher_foreground"
                android:tint="@color/primary_button_select_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thing_dp_13"
                android:layout_marginRight="@dimen/thing_dp_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#2E3238"
                android:textSize="@dimen/ts_14"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@+id/iv_icon"
                app:layout_constraintRight_toLeftOf="@id/guideline"
                app:layout_constraintTop_toTopOf="@+id/iv_icon"
                tools:text="Ground" />


            <TextView
                android:id="@+id/tv_total_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thing_dp_13"
                android:layout_marginTop="@dimen/thing_dp_5"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="@dimen/thing_dp_5"
                android:paddingLeft="@dimen/thing_dp_7"
                android:paddingTop="@dimen/thing_dp_2"
                android:paddingRight="@dimen/thing_dp_7"
                android:paddingBottom="@dimen/thing_dp_2"
                android:textColor="#ffffff"
                android:textSize="@dimen/ts_10"
                android:visibility="visible"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@+id/tv_name"
                app:layout_constraintRight_toLeftOf="@id/guideline"
                app:layout_constraintTop_toTopOf="@+id/iv_icon"
                tools:text="34"
                tools:visibility="visible" />

            <Button
                android:id="@+id/tv_turn_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="Turn Off"
                android:textSize="@dimen/ts_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/tv_turn_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="Turn On"
                android:textSize="@dimen/ts_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_turn_off"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_end="10dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
